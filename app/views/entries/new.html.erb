<h2>New Entry</h2>

<% if @current_user != nil %>
  <form action="/entries" method="post" enctype="multipart/form-data">
   <input type="hidden" name="place_id" id="title" value="<%= params["place_id"] %>">
  <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" id="title" class="form-control">
    </div>
    <div class="mb-3">
      <label for="description_input" class="form-label">Description</label>
      <input type="text" name="description" id="Description_input" class="form-control">
    </div>

    <div class="mb-3">
      <label for="uploaded_image_input" class="form-label">Upload Image</label>
      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control" accept="image/png, image/jpg, image/jpeg, image/gif">
    </div>
    
    <div class="mb-3">
  <label for="occurred_on_input" class="form-label">Occurred On</label>
  <input type="date" name="occurred_on" id="occurred_on_input" class="form-control" value="<%= Date.today %>">
</div>


    <button class="btn btn-primary">Save</button>
    <a href="/Places">Cancel</a>
  </form>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>
